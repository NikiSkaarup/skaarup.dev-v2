@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	color: rgb(240 244 250);
	background-color: rgb(20 17 65);
	background-image: radial-gradient(at 0% 0%, rgba(99 102 221 / 0.23) 0px, transparent 70%),
		radial-gradient(at 98% 1%, rgba(59 130 206 / 0.18) 0px, transparent 50%);
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: cover;
	background-position: center;
}
